@model List<Brand>

<h1>Marcas</h1>

<p>
    <a asp-action="Create">Crear Marca</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m=>brand.Name)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@brand.BrandId" class="btn btn-warning btn-sm btn-edit">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>